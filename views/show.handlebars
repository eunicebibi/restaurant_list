<h1 class="mb-1 restaurant-show-title">{{restaurantsData.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurantsData.image}}" alt="{{restaurantsData.name}}"
        style="max-width: 600px;">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurantsData.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurantsData.location}}
        <a href="{{restaurantsData.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurantsData.phone}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fa-solid fa-star"></i>
          評分：
        </span>
        {{restaurantsData.rating}}
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          <i class="fa-solid fa-circle-info"></i>
          特色：
        </span>
        {{restaurantsData.description}}
      </p>

      <a href="/restaurants/{{restaurantsData._id}}/edit"><button class="btn btn-outline-secondary">修改</button></a>
      <a href="/"><button class="btn btn-outline-primary">回到首頁</button></a>
      <form action="/restaurants/{{restaurantsData._id }}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-outline-danger">刪除餐廳</button>
      </form>
    </div>
  </div>
</div>